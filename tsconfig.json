{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"types": ["node", "jasmine"],
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/*.spec.ts"
	]
}